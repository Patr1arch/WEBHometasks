@model WebHometask4.Models.Genre
@{
    ViewData["Title"] = "Удаление жанра";
}

<h2> Удаление жанра </h2>
<form action='@Url.Action("Delete", "Genre", new { id = @Model.Id} )' method="post">
    <div class="form-group">
        <label for="Id" class="col-md-2 control-label">Id:</label>
        <div class="col-md-4">
            <input type="text" name="Id" class="form-control" value="@Model.Id" />
        </div>
    </div>
    <div class="form-group">
        <label for="Name" class="col-md-2 control-label">Имя:</label>
        <div class="col-md-4">
            <input type="text" name="Name" class="form-control" value="@Model.Name" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-light" value="Удалить" />
        </div>
    </div>
</form>

<button class="btn btn-primary" onclick="location.href = '/Genre/GenreNames';"> Вернуться в список </button>

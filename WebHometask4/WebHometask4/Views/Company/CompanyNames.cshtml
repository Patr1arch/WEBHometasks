@model IEnumerable<WebHometask4.Models.Company>
@{
    ViewData["Title"] = "Kомпании";
}

<form onclick="'@Url.Action("CompanyNames", "Company")';" method="get">
    <div class="form-group">
        <label for="Pattern" class="col-md-2 control-label">Pattern:</label>
        <div class="col-md-4">
            <input type="text" name="Pattern" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-light" value="Получить список" />
        </div>
    </div>
</form>
<h2> Краткий список компаний</h2>
<table class="table-condensed">
    <tr>
        <td> Название </td>
    </tr>
    @foreach (var company in Model)
    {
        <tr>
            <td> @company.Name</td>
            <td>
                <button class="btn btn-primary" onclick="location.href = '/Company/Details/@company.Id';"> Details </button>
            </td>
            <td>
                <button class="btn btn-secondary" onclick="location.href = '/Company/Edit/@company.Id';"> Edit </button>
            </td>
            <td>
                <button class="btn btn-danger" value="@company.Id" onclick="location.href = '@Url.Action("Delete", "Company", new { id = company.Id} )';"> Delete </button>
            </td>
        </tr>
    }
</table>
<button class="btn btn-success" onclick="location.href = '@Url.Action("Make", "Company")';"> Создать новую компанию </button>

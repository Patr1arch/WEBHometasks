@model WebHometask4.Models.Company
@{
    ViewData["Title"] = "Редактирование компании";
}

    <h2> Редактирование компании </h2>
    @*<form action='@Url.Action("Edit", "Company", new { id = @Model.Id} )' method="post">*@
    @using (Html.BeginForm("Edit", "Company", new { id = @Model.Id}, FormMethod.Post))
    {
        <div class="form-group">
            <label for="Id" class="col-md-2 control-label">Id:</label>
            <div class="col-md-4">
                @*<input disabled="disabled" type="text" name="Id" class="form-control" value="@Model.Id" />*@
                @*@Html.TextBox("Id", Model.Id, new { type = "number" })*@
                @Html.Label("Id", Model.Id.ToString())
            </div>
        </div>
        <div class="form-group">
            <label for="Name" class="col-md-2 control-label">Имя:</label>
            <div class="col-md-4">
                @*<input type="text" name="Name" class="form-control" value="@Model.Name" />*@
                @Html.TextBox("Name", Model.Name, new { type = "text" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-light" value="Отправить на изменение" />
            </div>
        </div>
        @Html.Hidden("CreationDate", Model.CreationDate)
        @*<input type="hidden" name="CreationDate" value="@Model.CreationDate" />*@
        @*<input type="hidden" name="oldId" value="@Model.Id" />
        <input type="hidden" name="oldName" value="@Model.Name" />*@
    }
    @*</form>*@

